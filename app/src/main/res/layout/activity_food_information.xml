<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        >

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.FoodInformationActivity"
            android:orientation="vertical"
            >



        <com.google.android.material.appbar.AppBarLayout
                android:id="@+id/appBarLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

            <!-- Toolbar -->
            <androidx.appcompat.widget.Toolbar
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:background="@android:color/white"

                    >

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"


                        >

                    <ImageView
                            android:id="@+id/btnClose"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_close_black_24dp"
                            android:layout_centerVertical="true"
                            android:padding="5dp"
                            />

                    <Button
                            android:id="@+id/btnAired"
                            android:layout_width="wrap_content"
                            android:layout_height="40dp"
                            android:layout_gravity="end"
                            android:background="@drawable/button_border"
                            android:text="Lên sóng"
                            android:textColor="@android:color/white"
                            android:paddingHorizontal="20dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="20dp"
                            android:textSize="14sp"

                            />
                </RelativeLayout>


            </androidx.appcompat.widget.Toolbar>

        </com.google.android.material.appbar.AppBarLayout>


        <ImageView
                android:id="@+id/imgAvatarFood"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:src="@drawable/icon_cook"
                android:paddingVertical="10dp"
                />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="16dp"
                android:background="@android:color/white"
                >

            <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Món nháp"
                    android:drawableLeft="@drawable/ic_lock_black_24dp"
                    android:enabled="false"
                    android:drawablePadding="10dp"
                    android:textSize="10sp"
                    android:background="@drawable/background_button_disable"
                    android:paddingHorizontal="10dp"
                    android:layout_marginTop="10dp"

                    />

            <TextView
                    android:id="@+id/tvNameFood"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Bạn nấu gì hôm nay?"
                    android:textSize="32sp"
                    android:textStyle="bold"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="20dp"
                    />

        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/background_linear"
                />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="20dp"
                android:paddingHorizontal="16dp"
                android:background="@android:color/white"
                >

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nhật ký nấu bếp"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingTop="16dp"
                    >

                <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/imgAvatarUser"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:src="@drawable/icon_cook"
                        />

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="16dp"
                        android:paddingBottom="16dp"
                        >

                    <TextView
                            android:id="@+id/tvNameUser"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Khắc hưng"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@android:color/black"
                            />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Đã nấu xong"
                            android:textColor="@color/colorApp"
                            android:textSize="16sp"
                            android:layout_marginTop="5dp"
                            />

                    <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="nhấn vào để xem các món"
                            android:layout_marginTop="5dp"
                            />
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@drawable/background_linear"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:paddingHorizontal="16dp"
                >
            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nguyên liệu"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/background_linear"
                    android:layout_marginTop="20dp"
                    android:paddingVertical="5dp"

                    >

                <EditText
                        android:id="@+id/edResources1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nguyên liệu gì? Bao nhiêu ạ?"
                        />

                <EditText
                        android:id="@+id/edResources2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nguyên liệu gì? Bao nhiêu ạ?"/>

                <EditText
                        android:id="@+id/edResources3"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Nguyên liệu gì? Bao nhiêu ạ?"/>


            </LinearLayout>

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Các bước làm"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginTop="20dp"
                    />

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@android:color/white"
                    android:paddingHorizontal="20dp"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp"
                    >

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                    <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="1"
                            android:padding="10dp"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:background="@drawable/background_number"
                            />
                    <EditText
                            android:id="@+id/eDStep1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Bạn đã làm các bước như thế nào ?"
                            android:layout_marginLeft="20dp"
                            />

                </LinearLayout>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        >
                    <ImageView
                            android:id="@+id/imgStep1"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/ic_camera"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_centerInParent="true"

                            />

                    <Button
                            android:id="@+id/btnAdd1"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="30dp"
                            android:paddingHorizontal="10dp"
                            android:text="Thêm"
                            android:background="@drawable/button_border"
                            />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@android:color/white"
                    android:paddingHorizontal="20dp"
                    android:orientation="vertical"
                    >

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                    <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="2"
                            android:padding="10dp"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:background="@drawable/background_number"
                            />
                    <EditText
                            android:id="@+id/eDStep2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Bạn đã làm các bước như thế nào ?"
                            android:layout_marginLeft="20dp"
                            />



                </LinearLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        >
                    <ImageView
                            android:id="@+id/imgStep2"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/ic_camera"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_centerInParent="true"

                            />

                    <Button
                            android:id="@+id/btnAdd2"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="10dp"
                            android:paddingHorizontal="10dp"
                            android:text="Thêm"
                            android:background="@drawable/button_border"
                            />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="@android:color/white"
                    android:paddingHorizontal="20dp"
                    android:orientation="vertical"
                    android:layout_marginBottom="30dp"

                    >

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        >

                    <TextView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:text="3"
                            android:padding="10dp"
                            android:textColor="@android:color/white"
                            android:textSize="20sp"
                            android:gravity="center"
                            android:background="@drawable/background_number"
                            />
                    <EditText
                            android:id="@+id/edStep3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Bạn đã làm các bước như thế nào ?"
                            android:layout_marginLeft="20dp"
                            />



                </LinearLayout>

                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"


                        >
                    <ImageView
                            android:id="@+id/imgStep3"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/ic_camera"
                            android:layout_gravity="center"
                            android:layout_marginTop="10dp"
                            android:layout_centerInParent="true"

                            />

                    <Button
                            android:id="@+id/btnAdd3"
                            android:layout_width="wrap_content"
                            android:layout_height="30dp"
                            android:layout_alignParentRight="true"
                            android:layout_marginBottom="10dp"
                            android:paddingHorizontal="10dp"
                            android:text="Thêm"
                            android:background="@drawable/button_border"
                            />

                </RelativeLayout>

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>

</androidx.core.widget.NestedScrollView>